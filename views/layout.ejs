<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <% if (stylesheets) { for (const stylesheet of stylesheets) { %>
        <link rel="stylesheet" href="/styles/<%= stylesheet %>.css" />
    <% }} %>
</head>
<body>
    <%- include("partials/header") %>
    <%- include("partials/sidebar", { currentPath }) %>
    <main>
        <%- body %>
    </main>
    <%- include("partials/footer") %>
    <% if (scripts) { for (const script of scripts) { %>
        <script src="/js/<%= script %>.js"></script>
    <% }} %>
</body>
</html>
